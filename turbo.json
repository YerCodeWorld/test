{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["MY_LAST_REQUEST"],
  "tasks": {
    "build": {
      "env": ["VITE_API_URL", "PLEASE_STOP"],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },

    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "env": ["VITE_API_URL", "PLEASE_STOP"],
      "cache": false,
      "persistent": true
    }
  }
}
